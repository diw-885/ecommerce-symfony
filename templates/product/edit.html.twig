{% extends 'base.html.twig' %}

{% block title %}Modifier {{ product.name }} - {{ parent() }}{% endblock %}

{% block banner_title %}Modifier {{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="fa fa-envelope"></i> Modifier {{ product.name }}.
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}

                        <button class="btn btn-primary" formnovalidate>
                            Modifier
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
